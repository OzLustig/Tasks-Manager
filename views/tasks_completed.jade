extends layout

block content

    .menu
        h2 Menu
        ul.nav.nav-pills
            li
                a(href='/') Home
            li
                a(href='/ideas') Todo List
            li.active
                a(href="/tasks/completed") Completed

    h1= title

    .list
        if (tasks.length === 0)
            | No tasks.
        - var index = 0
        each task in tasks
            .item
                div.num
                    span=index+1
                    - index = index + 1
                    |.&nbsp;
                div.name.completed-task
                    span.name=task.title
